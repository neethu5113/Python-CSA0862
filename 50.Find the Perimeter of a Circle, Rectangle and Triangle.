l=int(input("enter length"))
b=int(input("enter breadth"))
h=int(input("enter height"))
r=int(input("enter radius"))
rect=2*(l+b)
eq=3*l
tri=l+b+h
cir=2*3.14*r
print("perimeter of rectangle",rect)
print("perimeter of equitriangle",eq)
print("perimeter of triangle",tri)
print("perimeter of cirlce",cir)

